<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/chat_list_item_image"
        android:layout_width="@dimen/chat_list_item_image_width"
        android:layout_height="@dimen/chat_list_item_image_height" />

    <TextView
        android:id="@+id/chat_list_item_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/chat_list_item_message_textSize"/>
    
</LinearLayout>