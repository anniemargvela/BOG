<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:gravity="center_horizontal|center_vertical"
    android:id="@+id/button_layout">


    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/button_uninstall"
        android:layout_marginRight="@dimen/button_margins"
        android:layout_marginLeft="@dimen/button_margins"
        android:layout_marginEnd="@dimen/button_margins"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:textColor="@color/colorGreen"
        android:background="@drawable/green_border"
        android:onClick="buttonClicked"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/button_open"
        android:layout_weight="1"
        android:background="@color/colorGreen"
        android:textColor="@android:color/white"
        android:layout_marginLeft="@dimen/button_margins"
        android:layout_marginRight="@dimen/button_margins"
        android:layout_marginStart="@dimen/button_margins"
        android:layout_marginEnd="15dp"
        android:onClick="buttonClicked"/>
</LinearLayout>