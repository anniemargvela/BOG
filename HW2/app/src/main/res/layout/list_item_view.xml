<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:src="@drawable/folder"/>

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/image_view"
        android:singleLine="true"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        android:layout_marginLeft="@dimen/list_item_name_margin_left"
        android:layout_marginStart="@dimen/list_item_name_margin_left"
        android:textSize="@dimen/list_item_name_text_size"/>

    <TextView
        android:id="@+id/size_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_view"
        android:layout_toRightOf="@id/image_view"
        android:layout_alignBottom="@id/image_view"
        android:layout_marginLeft="@dimen/list_item_size_margin_left"
        android:layout_marginStart="@dimen/list_item_size_margin_left"
        android:textSize="@dimen/list_item_text_size"/>

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image_view"
        android:textSize="@dimen/list_item_date_text_size"/>

</RelativeLayout>